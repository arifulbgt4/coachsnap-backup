{
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.cache/**": true,
    "**/dist/**": true,
    "**/build/**": true
  },
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.eol": "\n",
  "search.exclude": {
    "**/.cache": true
  },
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "prettier.singleQuote": true,
  "eslint.enable": true,
  "eslint.workingDirectories": [ "./packages/backend", "./packages/dashboard" ]
}